<layout version="1.0">
    <adminhtml_gomage_slider_blocks_index>
        <reference name="content">
            <block type="gomage_slider/adminhtml_blocks" name="gomage_slider.admin.blocks" />
        </reference>
    </adminhtml_gomage_slider_blocks_index>
    <adminhtml_gomage_slider_blocks_edit>
    	<update handle="editor"/>
    	<reference name="head">     
            <action method="addJs"><script>gomage/slider-admin.js</script></action>
            <action method="addJs"><script>jscolor/jscolor.js</script></action>
            <action method="addJs"><script>jscolor/jscolor/jscolor.js</script></action>
        </reference> 
    </adminhtml_gomage_slider_blocks_edit>
    <adminhtml_gomage_slider_blocks_new>
    	<update handle="editor"/>
    	<reference name="head">     
            <action method="addJs"><script>gomage/slider-admin.js</script></action>
            <action method="addJs"><script>jscolor/jscolor.js</script></action>
            <action method="addJs"><script>jscolor/jscolor/jscolor.js</script></action>
        </reference>
    </adminhtml_gomage_slider_blocks_new>
    <adminhtml_gomage_slider_slides_index>
        <reference name="content">
            <block type="gomage_slider/adminhtml_slides" name="gomage_slider.admin.slides" />
        </reference>
    </adminhtml_gomage_slider_slides_index>
    <adminhtml_gomage_slider_slides_edit>
        <update handle="editor"/>
        <reference name="head">
            <action method="addJs"><script>jscolor/jscolor.js</script></action>
            <action method="addJs"><script>jscolor/jscolor/jscolor.js</script></action>
        </reference>
    </adminhtml_gomage_slider_slides_edit>
    <adminhtml_gomage_slider_slides_new>
        <update handle="editor"/>
        <reference name="head">
            <action method="addJs"><script>jscolor/jscolor.js</script></action>
            <action method="addJs"><script>jscolor/jscolor/jscolor.js</script></action>
        </reference>
    </adminhtml_gomage_slider_slides_new>
</layout>